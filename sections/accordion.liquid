{%- if section.blocks.size > 0 -%}
  {%- assign accordion_behavior       = section.settings.accordion_behavior -%}
  {%- assign accordion_direction      = section.settings.accordion_direction_desktop -%}
  {%- assign accordion_group          = false -%}
  {%- assign accordion_icon_position  = section.settings.accordion_icon_position -%}
  {%- assign accordion_layout         = section.settings.accordion_layout -%}
  {%- assign color_scheme             = section.settings.color_scheme -%}
  {%- assign content_horizontal       = section.settings.content_horizontal -%}
  {%- assign narrowed                 = false -%}
  {%- assign padding_bottom_desktop   = section.settings.padding_bottom_desktop -%}
  {%- assign padding_bottom_mobile    = section.settings.padding_bottom_mobile -%}
  {%- assign padding_top_desktop      = section.settings.padding_top_desktop -%}
  {%- assign padding_top_mobile       = section.settings.padding_top_mobile -%}
  {%- assign section_type             = section.type -%}
  {%- assign splitted                 = false -%}

  {%- if accordion_layout == 'narrow' -%}
    {%- assign narrowed = true -%}
  {%- endif -%}

  {%- if accordion_direction == 'row' -%}
    {%- assign splitted = true -%}
  {%- endif -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- case padding_bottom_desktop -%}
      {%- when 'md' -%}
        --padding-bottom-desktop: 60px;
      {%- when 'lg' -%}
        --padding-bottom-desktop: 80px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'md' -%}
        --padding-bottom-mobile: 32px;
      {%- when 'lg' -%}
        --padding-bottom-mobile: 50px;
    {%- endcase -%}

    {%- case padding_top_desktop -%}
      {%- when 'md' -%}
        --padding-top-desktop: 60px;
      {%- when 'lg' -%}
        --padding-top-desktop: 80px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'md' -%}
        --padding-top-mobile: 32px;
      {%- when 'lg' -%}
        --padding-top-mobile: 50px;
    {%- endcase -%}

    {%- case content_horizontal -%}
      {%- when 'center' -%}
        --accordion-content-alignment: center;
        --accordion-content-text-alignment: center;
      {%- when 'right' -%}
        --accordion-content-alignment: flex-end;
        --accordion-content-text-alignment: right;
    {%- endcase -%}

    {%- case accordion_icon_position -%}
      {%- when 'left' -%}
        --accordion-item-icon-position: left;
    {%- endcase -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  {%- if narrowed -%}
    <div class="accordion__container container">
  {%- endif -%}
    <div class="accordion__wrapper accordion__wrapper--padding-top accordion__wrapper--padding-bottom color-{{- color_scheme.id -}}"
      style="{{- variables | escape -}}"
    >
      {%- unless narrowed -%}
      <div class="accordion__container container">
      {%- endunless -%}
        <div class="accordion__content">
          {%- if splitted -%}
            <div class="accordion__columns">
              <div class="accordion__col">
          {%- endif -%}

            {%- for block in section.blocks -%}
              {%- assign block_id = block.id -%}

              {%- case block.type -%}
                {%- when 'button' -%}
                  {%- assign button_icon  = block.settings.button_icon -%}
                  {%- assign button_label = block.settings.button_label -%}
                  {%- assign button_type  = block.settings.button_type -%}
                  {%- assign button_url   = block.settings.button_url -%}

                  {%- if button_label != blank and button_url != blank -%}
                    {%- if accordion_group -%}
                      </div>

                      {%- assign accordion_group = false -%}
                    {%- endif -%}

                      {%- render 'button',
                          button_icon: button_icon,
                          button_id: block_id,
                          button_label: button_label,
                          button_type: button_type,
                          button_url: button_url,
                          section_type: section_type
                      -%}

                    {%- if button_group and next_block_type != 'button' -%}
                      </div>

                      {%- assign button_group = false -%}
                    {%- endif -%}
                  {%- endif -%}

                {%- when 'description' -%}
                  {%- if accordion_group -%}
                    </div>

                    {%- assign accordion_group = false -%}
                  {%- endif -%}

                  {%- assign description = block.settings.description -%}

                  {%- if description != blank -%}
                    <div class="accordion__description bq-content rx-content" id="{{- block_id -}}">
                      {{- description -}}
                    </div>
                  {%- endif -%}

                {%- when 'heading' -%}
                  {%- if accordion_group -%}
                    </div>

                    {%- assign accordion_group = false -%}
                  {%- endif -%}

                  {%- assign heading = block.settings.heading -%}

                  {%- if heading != blank -%}
                    <h2 class="accordion__heading" id="{{- block_id -}}">
                      {{- heading -}}
                    </h2>
                  {%- endif -%}

                {%- when 'item' -%}
                  {%- if splitted -%}
                    {%- continue -%}
                  {%- else -%}
                    {%- assign title = block.settings.accordion_title -%}
                    {%- assign text  = block.settings.accordion_text -%}

                    {%- unless accordion_group -%}
                      <div class="accordion__list">

                      {%- assign accordion_group = true -%}
                    {%- endunless -%}

                      {%- render 'accordion',
                          behavior: accordion_behavior,
                          block_id: block_id,
                          label: title,
                          position: accordion_icon_position,
                          text: text,
                          section_type: section_type
                      -%}

                  {%- endif -%}

                {%- when 'tagline' -%}
                  {%- if accordion_group -%}
                    </div>

                    {%- assign accordion_group = false -%}
                  {%- endif -%}

                  {%- assign tagline = block.settings.tagline -%}

                  {%- if tagline != blank -%}
                    <p class="accordion__tagline tagline" id="{{- block_id -}}">
                      {{- tagline -}}
                    </p>
                  {%- endif -%}

              {%- endcase -%}
            {%- endfor -%}

          {%- if splitted -%}
              </div>

              <div class="accordion__col">
                <div class="accordion__list">
                  {%- for block in section.blocks -%}
                    {%- assign block_id = block.id -%}

                    {%- if block.type == 'item' -%}
                      {%- assign title = block.settings.accordion_title -%}
                      {%- assign text  = block.settings.accordion_text -%}

                        {%- render 'accordion',
                            behavior: accordion_behavior,
                            block_id: block_id,
                            label: title,
                            position: accordion_icon_position,
                            text: text,
                            section_type: section_type
                        -%}

                    {%- endif -%}
                  {%- endfor -%}

                </div>
              </div>
            </div>
          {%- endif -%}

          {%- if accordion_group -%}
            </div>
          {%- endif -%}
        </div>
      {%- unless narrowed -%}
      </div>
      {%- endunless -%}
    </div>
  {%- if narrowed -%}
    </div>
  {%- endif -%}
{%- endif -%}

